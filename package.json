    "express": "^4.16.3",
    "jsend": "^1.0.2",
    "jsonwebtoken": "^8.3.0",
    "nodemon": "^1.18.4",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.0",
